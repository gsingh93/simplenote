{
  "name": "Syncpad for Simplenote",
  "version": "1.5.0.3",
  "description": "Simple text notepad that syncs with Simplenote. Keep your notes in sync across computers and handhelds. Works offline as well.",
  "icons": {
    "96": "imanges/icon_96.png",
    "128": "images/icon_128.png",
    "16": "images/icon_16.png",
    "19": "images/icon_24.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png"
  },
  "background_page": "background.html",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/icon_24.png",
    "popup": "popup.html"
  },
  "permissions": [
    "https://simple-note.appspot.com/",
    "contextMenus",
    "unlimitedStorage"
  ]
}